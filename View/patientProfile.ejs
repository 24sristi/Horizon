                    <li><a class="" href="/p/logout">Logout</a></li>
                </ul>
            </div>
            <div class="div1Wrapper">
                <div class="div1">
                    <div class="photo"><img src="<%- user.pImage %>" alt="" class="photo"></div>
                    <div class="name">
                        <%- user.name %>
                    </div>
                    <div class="common" id="option1">
                        <i class="fas fa-user-circle"></i>Profile
                    </div>
                    <div class="common" id="option2"><i class="fas fa-flask"></i></i>Lab Report</div>
                    <div class="common" id="option3"><i class="fas fa-prescription"></i>Prescription</div>
                    <div class="common" id="option4"><i class="fas fa-file-prescription"></i>E-prescription</div>
                    <div class="common" id="option5"><i class="fas fa-hourglass-start"></i>Pending Request</div>
                    <div class="common" id="option7"><i class="fas fa-user-md"></i>Doctors</div>
                    <div class="common" id="option6"><i class="fas fa-sign-out-alt"></i>Logout</div>

                </div>
            </div>
            <div class="div2" style=" background-image: url(/images/profile/doctor.png);
            background-size: 46%;
            background-position: -190px 100px;
            background-repeat: no-repeat;">

                <div class="first">
                    <div class="heading">Profile </div>
                </div>
                <div class="second">
                    <div class="wrap">
                        <div class="mainprofile">
                            <div class="pDetails">
                                <div id="name">
                                    <%- user.name %>
                                </div>
                                <div class="details">
                                    <div id="email"><span>Email: </span>
                                        <input type="text" name="" id="pEmail" value="<%- user.email %>" readOnly >
                                    </div>
                                    <div id="mobileno"><span>Phone no.:</span>
                                        <input type="text" name="" id="pPhone" value="<%- user.phone %>" readOnly >

                                    </div>
                                    <div id="address"><span> Address :</span>
                                        <input type="text" name="" id="pAddress" value="<%- user.address %>" readOnly >

                                    </div>
                                    <div id="timing"><span>Age :</span>
                                        <input type="text" name="" id="pAge" value="<%- user.age %>" readOnly >

                                    </div>

                                    <div class="editBtn">Edit</div>
                                    <div class="saveBtn">Save</div>
                                    <div class="ProfilecancelBtn">Cancel</div>
                                </div>
                            </div>
                            <div class="profilePic">
                                <img src="<%- user.pImage %>" alt="">
                                <label for="changeProfilePic" class="edit" style="cursor: pointer;"
                                    id="changeDPBtn">Change</label>
                                <input type="file" name="" id="changeProfilePic" style="display: none;">
                            </div>

                        </div>


                    </div>
                </div>

                <div class="options">
                    <i class="fas fa-flask" id="showLB"></i>
                    <i class="fas fa-prescription" id="showPres"></i>
                    <i class="fas fa-file-prescription" id="showEpres"></i>
                    <i class="fas fa-user-circle" id="showProfile"></i>
                </div>
            </div>

        </div>
    </div>
    </div>
    </div>
