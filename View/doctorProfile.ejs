                </ul>
            </div>
            <div class="div1Wrapper">
                <div class="div1">
                    <div class="photo"><img src="<%- user.pImage %>" alt="" class="photo"></div>
                    <div class="name">
                        <%- user.name %>
                    </div>
                    <div class="common" id="option1">
                        <i class="fas fa-user-circle"></i>Profile
                    </div>
                    <div class="common" id="option2"><i class="fas fa-user-injured"></i>Patient List</div>
                    <div class="common" id="option3"><i class="far fa-hospital"></i>    Emergency</div>
                    <div class="common" id="option9"><i class="far fa-address-book"></i>Contact Us</div>
                    <div class="common" id="option4"><i class="fas fa-sign-out-alt"></i>Logout</div>

                </div>
            </div>
            <div class="div2" style=" background-image: url(/images/profile/doctor.png);
            background-size: 46%;
            background-position: -190px 100px;
            background-repeat: no-repeat;">

                <div class="first">
                    <div class="heading">Profile </div>
                </div>
                <div class="second">
                    <div class="wrap" style="    height: 640px;">
                        <div class="mainprofile">
                            <div class="pDetails">
                                <div id="name">
                                    <%- user.name %>
                                </div>
                                <div class="details">
                                    <div id="email"><span>Email: </span>
                                        <input type="text" name="" id="dEmail" value="<%- user.email %>" readOnly >
                                    </div>
                                    <div id="mobileno"><span>Contact:</span>
                                        <input type="text" name="" id="dPhone" value="<%- user.phone %>" readOnly >

                                    </div>
                                    <div id="address"><span> Address :</span>
                                        <input type="text" name="" id="dAddress" value="<%- user.address %>" readOnly >

                                    </div>
                                    <div id="email"><span>Timing :</span>
                                        <input type="text" name="" id="dtime" value="<%- user.timing %>" readOnly >

                                    </div>
                                    <div id="department"><span>Department : </span>
                                        <input type="text" name="" id="dDepartment" value="<%- user.department %>" readOnly >
                                    </div>
                                    <div id="fees"><span>Fees :</span>
                                        <input type="text" name="" id="dFees" value="<%- user.fees %>" readOnly >

                                    </div>
                                    
                                    <div class="editBtn">Edit</div>
                                    <div class="saveBtn" >Save</div>
                                    <div class="cancelBtn btn cancelinProfile" >Cancel</div>
                                </div>
                            </div>
                            <div class="profilePic">
                                <img src="<%- user.pImage %>" alt="">
                                <label for="changeProfilePic" class="edit" style="cursor: pointer;">Change</label>
                                <input type="file" name="" id="changeProfilePic" style="display: none;">
                            </div>

                        </div>


                    </div>
                    <div class="patientList">

                        <div class="header">
                            <div class="sno">S. No.</div>
                            <div class="pname">Patient's Name</div>
                            <div class="address">Address</div>
                            <div class="phone">Phone</div>
                            <div class="view">View</div>
                        </div>
                    </div>
                </div>

                <div class="options">
                    <i class="fas fa-user-injured" id="showPatientList"></i>
                    <i class="fas fa-user-circle" id="showProfile"></i>
                </div>
            </div>

        </div>
    </div>
    </div>
    </div>

